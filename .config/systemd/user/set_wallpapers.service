[Unit]
Description=Sets random wallpapers
Wants=set_wallpapers.timer

[Service]
Type=oneshot
ExecStart=/usr/bin/nitrogen --head=0 --random --set-zoom-fill /home/elomatreb/Pictures/Wallpapers/0
ExecStart=/usr/bin/nitrogen --head=1 --random --set-zoom-fill /home/elomatreb/Pictures/Wallpapers/1

[Install]
WantedBy=window-manager.target
