mpd_host = /run/user/1000/mpd

# Center currently playing track
autocenter_mode = yes
centered_cursor = yes

# Show status messages and highlight for 2 seconds
message_delay_time = 2
playlist_disable_highlight_delay = 2

# Nicer progressbar
progressbar_look = "━━─"
progressbar_color = 238
progressbar_elapsed_color = green

# Hide column headers
titles_visibility = no

# Don't scroll header (Playlist: ...), annoying movement
header_text_scrolling = no

# Show secondary elements in matching greys
state_line_color = 238
header_window_color = 9
statusbar_time_color = 9

# Song status ("Playing: ...")
song_status_format = {{%a - {%b {(%y) }- }}{%t}}|{%f}

# Playlist format:
song_columns_list_format = "(20)[green]{ar} (6f)[9]{lr} (50)[cyan]{t|f:Title} (20)[blue]{bEr}"

# Show currently played item in bold, with a green > in front (and indented)
now_playing_prefix = "$4$b>$0"
now_playing_suffix = "$/b"

playlist_shorten_total_times = yes
